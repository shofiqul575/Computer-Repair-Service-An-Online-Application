            <!-- Grid row -->

        </div>
        <!-- Footer Links -->
        <!-- Copyright -->
        <div class="bg-info footer-copyright text-center text-black-50 py-3">
            <p class="lead">Copyright &copy; @DateTime.Now.Year - RrpairService</p>
        </div>
        <!-- Copyright -->

    </footer>
    <!-- Footer -->


    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/all.js"></script>
</body>
</html>