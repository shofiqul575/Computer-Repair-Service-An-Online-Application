            </th>
            <th>
                @Html.DisplayNameFor(model => model.probid)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProblemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeviceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.ProblemDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.probid)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.asId })
                </td>
            </tr>
        }

    </table>
</div>

