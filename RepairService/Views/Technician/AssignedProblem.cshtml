<div class="container">

    @Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link lead" })
    <h2 class="text-center">Assigned Problem</h2>
    <hr />

    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProblemName)
            </th>
            <th>
